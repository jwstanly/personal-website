        "typescript": "^4.0.3",
        "web-vitals": "^0.2.4"
    },
    "devDependencies": {
        "jest": "26.6.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",

        "sam-build": "env-cmd -e production node ./scripts/sam_build",
        "sam-deploy": "env-cmd -e production node ./scripts/sam_deploy",
        "cf-provision": "env-cmd -e production node ./scripts/cloud_formation_provision",

        "upload": "env-cmd -e production node ./scripts/upload_bucket",
        "deploy": "yarn run build && yarn run upload"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
