{
    "name": "john-wrights-personal-website",
    "description": "A personal landing page and blog for John Wright Stanly",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "aws-amplify": "^3.3.20",
        "bootstrap": "^4.6.0",
        "next": "10.0.7",
        "react": "^17.0.1",
        "react-bootstrap": "^1.4.0",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.53",
        "@types/react-dom": "^16.9.8",
        "@types/shelljs": "^0.8.8",
        "env-cmd": "10.0.1",
        "shelljs": "^0.8.3",
        "typescript": "^4.2.2"
    },
    "scripts": {

        "dev": "NODE_OPTIONS='--inspect' next dev",
        "build": "next build",
        "start": "next start",
        "export": "next export",

        "index-html": "node ./scripts/index_html",
        "sync-s3": "env-cmd -e production node ./scripts/upload_bucket",
        "deploy": "yarn run build && yarn run export && yarn run index-html && yarn run sync-s3",

        "compile-lambdas": "tsc -p sam/tsconfig.sam.json",
        "sam-build": "env-cmd -e production node ./scripts/sam_build",
        "sam-package": "env-cmd -e production node ./scripts/sam_package",
        "sam-deploy": "env-cmd -e production node ./scripts/sam_deploy",
        "provision": "yarn run compile-lambdas && yarn run sam-build && yarn run sam-deploy"
        
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
